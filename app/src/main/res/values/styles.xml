<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!--Common-->
    <style name="commonStyle">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">@dimen/text_body</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="toolbarStyle" parent="commonStyle">
        <item name="android:textSize">@dimen/text_title</item>
        <item name="android:textStyle">bold</item>
    </style>
    <!--Login Style-->
    <style name="logoAppStyle" parent="commonStyle">
        <item name="android:textSize">@dimen/text_heading</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="EmailPassLoginStyle" parent="commonStyle">
        <item name="android:textStyle">italic</item>
        <item name="android:background">@drawable/border_selector</item>
    </style>

    <style name="ButtonLogin" parent="commonStyle">
        <item name="android:background">@color/colorRed</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="ButtonLoginface" parent="ButtonLogin">
        <item name="android:background">@color/colorBlueFace</item>
    </style>

    <style name="LinkSignUpStyle" parent="commonStyle">

    </style>

    <!--Difference-->
    <style name="profileStyle" parent="commonStyle">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textSize">@dimen/text_title_2</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SearchStyle" parent="toolbarStyle">
        <item name="android:background">@color/colorWhite</item>
    </style>

    <style name="ButtonSignUpStyle" parent="toolbarStyle">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@color/colorBlue</item>
    </style>

    <style name="genderStyle" parent="toolbarStyle">
        <item name="android:textSize">@dimen/text_body</item>
        <item name="android:layout_marginLeft">@dimen/margin32dp</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="fieldStyle" parent="genderStyle">
        <item name="android:textStyle">italic</item>
        <item name="android:background">@drawable/border_selector</item>
        <item name="android:layout_marginLeft">@dimen/margin16dp</item>
        <item name="android:layout_marginRight">@dimen/margin16dp</item>
        <item name="android:paddingLeft">@dimen/margin16dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>
</resources>
